{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DurmanPass",
  "version": "0.1.2",
  "identifier": "com.durmanpass.app",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/passwordman/browser"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "DurmanPass - Стартовая страница",
        "width": 600,
        "height": 400,
        "maxWidth": 600,
        "maxHeight": 400,
        "resizable": false,
        "fullscreen": false,
        "maximized": false,
        "maximizable": false,
        "dragDropEnabled": true,
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/logo/32x32.png",
      "icons/logo/128x128.png",
      "icons/logo/logo.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "RWSWIRaHXpqDhsnh82EXKA+IzO+9IY6Pk2pTQqQp/DYKsilYWWRUev2r",
      "endpoints": [
        "https://raw.githubusercontent.com/DurmanPass/Durman-Desktop/main/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
