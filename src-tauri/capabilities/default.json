{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "*"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:allow-open",
    "dialog:allow-confirm",
    "dialog:default",
    "fs:default",
    "fs:allow-write-file",
    "fs:write-all",
    "fs:allow-read-text-file",
    "fs:read-files",
    "fs:allow-read-text-file-lines",
    "fs:read-all",
    "fs:allow-read-file"
  ]
}