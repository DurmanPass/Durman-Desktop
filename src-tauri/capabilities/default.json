{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "*"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:allow-open",
    "dialog:allow-confirm",
    "dialog:default",
    "fs:default",
    "fs:allow-write-file",
    "fs:write-all",
    "fs:allow-read-text-file",
    "fs:read-files",
    "fs:allow-read-text-file-lines",
    "fs:read-all",
    "fs:allow-read-file",
    "store:allow-load",
    "store:allow-save",
    "store:allow-set",
    "store:allow-get",
    "store:allow-delete",
    "store:allow-clear",
    "updater:allow-check",
    "updater:allow-download",
    "updater:allow-download-and-install",
    "updater:allow-install",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$APPDATA/"
        },
        {
          "path": "$LOCALAPPDATA/**"
        },
        {
          "path": "$DOCUMENT/*"
        },
        {
          "path": "$DOCUMENT/"
        },
        {
          "path": "$DOCUMENT"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DOWNLOAD/*"
        },
        {
          "path": "$DOWNLOAD/"
        },
        {
          "path": "$DOWNLOAD"
        },
        {
          "path": "$AUDIO/**"
        },
        {
          "path": "$AUDIO/*"
        },
        {
          "path": "$AUDIO/"
        },
        {
          "path": "$AUDIO"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "$DESKTOP/*"
        },
        {
          "path": "$DESKTOP/"
        },
        {
          "path": "$DESKTOP"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$HOME/*"
        },
        {
          "path": "$HOME/"
        },
        {
          "path": "$HOME"
        },
        {
          "path": "$PICTURE/**"
        },
        {
          "path": "$PICTURE/*"
        },
        {
          "path": "$PICTURE/"
        },
        {
          "path": "$PICTURE"
        },
        {
          "path": "$PUBLIC/**"
        },
        {
          "path": "$PUBLIC/*"
        },
        {
          "path": "$PUBLIC/"
        },
        {
          "path": "$PUBLIC"
        },
        {
          "path": "$VIDEO/**"
        },
        {
          "path": "$VIDEO/*"
        },
        {
          "path": "$VIDEO/"
        },
        {
          "path": "$VIDEO"
        }
      ]
    }
  ]
}